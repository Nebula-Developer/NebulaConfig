
root = true

[*]

# ----- Global rules -----
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]

# ----- K&R newline styling -----
csharp_new_line_before_catch = false
csharp_new_line_before_else = false
csharp_new_line_before_finally = false
csharp_new_line_before_members_in_anonymous_types = false
csharp_new_line_before_members_in_object_initializers = false
csharp_new_line_before_open_brace = none
csharp_new_line_between_query_expression_clauses = false

# ----- Error severities -----
dotnet_diagnostic.IDE0161.severity = error # Namespace declaration violation
dotnet_diagnostic.IDE0040.severity = error # Add accessibility modifiers
dotnet_diagnostic.IDE0065.severity = error # 'using' outside namespace
dotnet_diagnostic.IDE0011.severity = error # Force brace rules
dotnet_diagnostic.CA2201.severity = error # Avoid using 'Exception'
dotnet_diagnostic.IDE1006.severity = error # Naming rule violation

dotnet_diagnostic.IDE0008.severity = none # Allow 'var'
dotnet_diagnostic.IDE0058.severity = none # Ignore discarded values
dotnet_diagnostic.IDE0032.severity = none # Use auto properties
dotnet_diagnostic.CA1707.severity = none # Allow underscore in names

dotnet_diagnostic.CA1051.severity = suggestion # Do not declare visible instance fields
dotnet_diagnostic.IDE0046.severity = suggestion # Block can be simplified
dotnet_diagnostic.CS1591.severity = suggestion # Missing XML comment

# ----- Style rules -----
csharp_style_var_when_type_is_apparent = true
csharp_style_var_elsewhere = true
csharp_prefer_braces = false
dotnet_style_prefer_auto_properties = false
csharp_style_namespace_declarations = file_scoped:error
csharp_style_expression_bodied_operators = true:suggestion
csharp_style_expression_bodied_methods = true:suggestion
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false

# ----- Naming styles -----
dotnet_naming_style.pascal_case_style.capitalization = pascal_case
dotnet_naming_style.camel_case_style.capitalization = camel_case
dotnet_naming_style.underscore_camel_case_style.capitalization = camel_case
dotnet_naming_style.underscore_camel_case_style.required_prefix = _

# Public + Protected methods/properties
dotnet_naming_symbols.public_protected_methods_props.applicable_kinds = method, property
dotnet_naming_symbols.public_protected_methods_props.applicable_accessibilities = public, protected

# Internal methods/properties
dotnet_naming_symbols.internal_methods_props.applicable_kinds = method, property
dotnet_naming_symbols.internal_methods_props.applicable_accessibilities = internal

# Private methods/properties
dotnet_naming_symbols.private_methods_props.applicable_kinds = method, property
dotnet_naming_symbols.private_methods_props.applicable_accessibilities = private

# Private fields
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

# Public/Protected PascalCase
dotnet_naming_rule.public_protected_methods_props_should_be_pascal.symbols = public_protected_methods_props
dotnet_naming_rule.public_protected_methods_props_should_be_pascal.style = pascal_case_style
dotnet_naming_rule.public_protected_methods_props_should_be_pascal.severity = error

# Internal PascalCase
dotnet_naming_rule.internal_methods_props_should_be_pascal.symbols = internal_methods_props
dotnet_naming_rule.internal_methods_props_should_be_pascal.style = pascal_case_style
dotnet_naming_rule.internal_methods_props_should_be_pascal.severity = error

# Private camelCase (methods/properties)
dotnet_naming_rule.private_methods_props_should_be_camel.symbols = private_methods_props
dotnet_naming_rule.private_methods_props_should_be_camel.style = camel_case_style
dotnet_naming_rule.private_methods_props_should_be_camel.severity = error

# Private _camelCase (fields)
dotnet_naming_rule.private_fields_should_have_underscore.symbols = private_fields
dotnet_naming_rule.private_fields_should_have_underscore.style = underscore_camel_case_style
dotnet_naming_rule.private_fields_should_have_underscore.severity = error
